---
import CardsContainer from "./CardsContainer.astro"
import Card from "./Card.astro"
import 'aos/dist/aos.css'; 
---
<div class="container mx-auto px-4 my-8">
    <h1 data-aos="fade-right" class="text-center mb-8 font-bold custom-text-color custom-font">Las cifras ratifican nuestro éxito</h1>
    <CardsContainer class="flex justify-center flex-wrap gap-4">
      <Card>
        <div slot="front" class="text-center">
          <h2 class="mb-2 font-bold custom-text-color custom-font-card">3000</h2>
          <p class="font-bold custom-font-subcard">Empresas atendidas</p>
        </div>
      </Card>
      <Card>
        <div slot="front" class="text-center">
          <h2 class="mb-2 font-bold custom-text-color custom-font-card">90%</h2>    
          <p class="font-bold custom-font-subcard">Ejecución</p>
        </div>
        <div slot="back">Prueba</div>
      </Card>
      <Card>
        <div slot="front" class="text-center">
          <h2 class="mb-2 font-bold custom-text-color custom-font-card">+40</h2>
          <p class="font-bold custom-font-subcard">Mil millones aprobados</p>
        </div>
        <div slot="back">Prueba</div>
      </Card>
    </CardsContainer>
</div>

<script>
  import AOS from 'aos';
  AOS.init();
</script>

<style>
  .custom-text-color {
    color: var(--main-color);
  }
  .custom-font {
    font-family: var(--font-family);
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 700;
  }
  .custom-font-card {
    color: var(--second-color);
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    margin: 0.5em;
  }
  .custom-font-subcard {
    color: var(--main-color);
    font-size: clamp(1.5rem, 3vw, 1.5rem);
    font-weight: 500;
  }
</style>